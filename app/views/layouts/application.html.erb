<!DOCTYPE html>
<html>
  <head>
    <title>Looking4</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand">Looking4</a>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= form_tag '/places', method: :get do %>
              <div class="form-group">
                <%= text_field_tag :keyword, params[:keyword], class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= text_field_tag :address, params[:address], class: 'form-control' %>
              </div>
              <%= submit_tag 'Search', class: 'btn btn-success' %>
          <% end %>

          <hr />

          <ol>
            <% @popular_queries.each do |query| %>
              <li><%= query.description %></li>
            <% end %>
          </ol>

        </div>
        <div class="col-md-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
